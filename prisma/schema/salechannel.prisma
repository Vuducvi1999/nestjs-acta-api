model SaleChannel {
  id String @id @default(cuid())

  // KiotViet integration - Tích hợp KiotViet
  kiotVietSaleChannelId Int? @unique // ID kênh bán hàng từ KiotViet

  name        String       @unique
  isActive    Boolean      @default(true)
  img         String
  isNotDelete Boolean      @default(true)
  source      OriginSource @default(acta) // Nguồn gốc

  orders   Order[]
  invoices Invoice[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([kiotVietSaleChannelId])
  @@index([name])
  @@index([source])
  @@map("sale_channels")
}
