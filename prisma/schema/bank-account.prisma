model BankAccount {
  id String @id @default(cuid())

  // KiotViet integration - Tích hợp KiotViet
  kiotVietBankAccountId Int? @unique // ID tài khoản ngân hàng từ KiotViet

  // Thông tin tài khoản ngân hàng
  bankName      String // Tên ngân hàng
  accountNumber String // Số tài khoản
  description   String // Ghi chú

  source OriginSource @default(acta) // Nguồn gốc

  // Relationships - Các mối quan hệ
  orderPayments         OrderPayment[]
  invoicePayments       InvoicePayment[]
  purchaseOrderPayments PurchaseOrderPayment[]
  returnOrderPayments   ReturnOrderPayment[]
  cashflows             Cashflow[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([kiotVietBankAccountId])
  @@index([accountNumber])
  @@map("bank_accounts")
}
